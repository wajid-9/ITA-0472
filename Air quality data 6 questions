data(airquality)
mean_temp <- sum(airquality$Temp) / length(airquality$Temp)
cat("Mean temperature (without using built-in function):", mean_temp, "\n")
print(head(airquality, 5))
airquality_subset <- airquality[, !names(airquality) %in% c("Temp", "Wind")]
print(head(airquality_subset))
coldest_day <- airquality$Day[which.min(airquality$Temp)]
coldest_temp <- min(airquality$Temp)
cat("Coldest day during the period (Day:", coldest_day, "):", coldest_temp, "Â°F\n")
print(summary(airquality))
library(reshape2)
airquality_melted <- melt(airquality)
print(head(airquality_melted))
airquality_melted_id <- melt(airquality, id.vars = c("Month", "Day"))
print(head(airquality_melted_id))
airquality_cast <- dcast(airquality_melted_id, Month + Day ~ variable)
print(head(airquality_cast))
average_per_month <- dcast(airquality_melted_id, Month ~ variable, fun.aggregate = mean)
print(average_per_month)
