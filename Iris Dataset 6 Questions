data(iris)
cat("Dimensions of the dataset:\n")
print(dim(iris))
cat("\nStructure of the dataset:\n")
print(str(iris))
cat("\nSummary statistics:\n")
print(summary(iris))
cat("\nStandard Deviation of all features:\n")
print(sapply(iris[, 1:4], sd))
cat("\nMean of features grouped by Species:\n")
print(with(iris, tapply(Sepal.Length, Species, mean)))
print(with(iris, tapply(Sepal.Width, Species, mean)))
print(with(iris, tapply(Petal.Length, Species, mean)))
print(with(iris, tapply(Petal.Width, Species, mean)))
cat("\nStandard deviation of features grouped by Species:\n")
print(with(iris, tapply(Sepal.Length, Species, sd)))
print(with(iris, tapply(Sepal.Width, Species, sd)))
print(with(iris, tapply(Petal.Length, Species, sd)))
print(with(iris, tapply(Petal.Width, Species, sd)))
cat("\nQuantile value of Sepal width (Sepal.Width):\n")
print(quantile(iris$Sepal.Width))
cat("\nQuantile value of Sepal length (Sepal.Length):\n")
print(quantile(iris$Sepal.Length))
iris1 <- iris
iris1$Sepal.Length.Cate <- cut(iris$Sepal.Length, breaks = quantile(iris$Sepal.Length), labels = c("Short", "Medium", "Long"))
cat("\nAverage value of numerical variables by Species and Sepal.Length.Cate:\n")
print(aggregate(. ~ Species + Sepal.Length.Cate, data = iris1, FUN = mean))
cat("\nAverage mean value of numerical variables by Species and Sepal.Length.Cate:\n")
print(aggregate(. ~ Species + Sepal.Length.Cate, data = iris1, FUN = function(x) mean(mean(x))))
cat("\nPivot Table based on Species and Sepal.Length.Cate:\n")
print(xtabs(~ Species + Sepal.Length.Cate, data = iris1))
